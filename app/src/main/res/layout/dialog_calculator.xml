<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="15dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="#E0E0E0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Standard Calculator"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:fontFamily="serif"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"/>

        <!-- Computer Style Display -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardElevation="5dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvCalcExpression"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/tvCalcDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="36sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:alignmentMode="alignMargins">

            <!-- Top Row: C, Back, %, / -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClear" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="C" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#FF5252" android:textColor="#FFF" android:textSize="18sp" app:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="⌫" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#BDBDBD" android:textColor="#000" android:textSize="18sp" app:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPercent" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="%" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#BDBDBD" android:textColor="#000" android:textSize="18sp" app:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDiv" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="÷" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#F57C00" android:textColor="#FFF" android:textSize="22sp" app:elevation="6dp" />

            <!-- Row 2: 7, 8, 9, * -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn7" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="7" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#FFFFFF" android:textColor="#000" android:textSize="20sp" app:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn8" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="8" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#FFFFFF" android:textColor="#000" android:textSize="20sp" app:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn9" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="9" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#FFFFFF" android:textColor="#000" android:textSize="20sp" app:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMul" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="×" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#F57C00" android:textColor="#FFF" android:textSize="22sp" app:elevation="6dp" />

            <!-- Row 3: 4, 5, 6, - -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn4" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="4" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#FFFFFF" android:textColor="#000" android:textSize="20sp" app:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn5" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="5" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#FFFFFF" android:textColor="#000" android:textSize="20sp" app:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn6" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="6" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#FFFFFF" android:textColor="#000" android:textSize="20sp" app:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSub" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="−" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#F57C00" android:textColor="#FFF" android:textSize="22sp" app:elevation="6dp" />

            <!-- Row 4: 1, 2, 3, + -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="1" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#FFFFFF" android:textColor="#000" android:textSize="20sp" app:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="2" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#FFFFFF" android:textColor="#000" android:textSize="20sp" app:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="3" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#FFFFFF" android:textColor="#000" android:textSize="20sp" app:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdd" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="+" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#F57C00" android:textColor="#FFF" android:textSize="22sp" app:elevation="6dp" />

            <!-- Row 5: 0, ., = -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDot" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="." app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#FFFFFF" android:textColor="#000" android:textSize="20sp" app:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn0" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="65dp" android:layout_height="60dp" android:text="0" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#FFFFFF" android:textColor="#000" android:textSize="20sp" app:elevation="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEqual" style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="136dp" android:layout_height="60dp" android:text="=" app:cornerRadius="8dp" android:layout_margin="3dp" android:backgroundTint="#2E7D32" android:textColor="#FFF" android:textSize="24sp" app:elevation="6dp"
                android:layout_columnSpan="2" />

        </GridLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseCalc"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLOSE"
            android:layout_marginTop="5dp"
            android:textColor="#666666" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
